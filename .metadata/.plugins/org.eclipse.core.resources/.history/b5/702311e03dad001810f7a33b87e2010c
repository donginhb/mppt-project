void TIM1_BRK_TIM9_IRQHandler(void) {
	HAL_TIM_IRQHandler(&htim9);
}

void TIM1_TRG_COM_TIM11_IRQHandler(void) {
	HAL_TIM_IRQHandler(&htim11);
}


void USART1_IRQHandler(void) {

	HAL_UART_Receive(&huart1, &rxBuff[rxByteCount], 1, 0);
	advancePointer();

	if (rxByteCount > 6) {
		calculateCRC();
		rxByteCount = 0;
		inByteCount = 0;

		if (calculateCRC() == 1)
			handleData();
	}

	__HAL_UART_FLUSH_DRREGISTER(&huart1);
	HAL_NVIC_ClearPendingIRQ(USART1_IRQn);
}

void ADC_IRQHandler(void)
{
  HAL_ADC_IRQHandler(&hadc1);
}

void DMA2_Stream0_IRQHandler(void)
{
  HAL_DMA_IRQHandler(&hdma_adc1);
}


void advancePointer(void)
{
	if (rxByteCount == 0)
	{

		if (rxBuff[rxByteCount] == 0x9a)
		{	// Start of frame
			inBuff[rxByteCount] = rxBuff[rxByteCount];
			rxByteCount++;
			inByteCount++;
		}
		else
		{
			rxByteCount = 0;
			inByteCount = 0;
			memset((void *)rxBuff, 0, 20);
			memset((void *)inBuff, 0, 20);
		}
	}
	else
	{
		//Escape char received
		if (rxBuff[rxByteCount] == 0x9b)
		{
			rxByteCount++;
		}

		// Decode 0x9b, 0x01 to 0x9a
		else if ((rxBuff[rxByteCount] == 0x01) && (rxBuff[rxByteCount - 1] == 0x9b))
		{
			inBuff[inByteCount] = 0x9a;
			rxByteCount++;
			inByteCount++;
		}

		// Decode 0x9b, 0x02 to 0x9b
		else if ((rxBuff[rxByteCount] == 0x02) && (rxBuff[rxByteCount - 1] == 0x9b))
		{
			inBuff[inByteCount] = 0x9b;
			rxByteCount++;
			inByteCount++;
		}

		else
		{
			inBuff[inByteCount] = rxBuff[rxByteCount];
			rxByteCount++;
			inByteCount++;
		}
	}
}

uint8_t calculateCRC(void)
{
	uint8_t i;
	uint8_t crcBuff[16];
	uint16_t crc, rxCRC;
	uint8_t buff[64];

//	rxCRC = (inBuff[inByteCount-2] << 8) | inBuff[inByteCount - 1];
	rxCRC = (inBuff[5] << 8) | inBuff[6];

	for (i = 0; i < (inByteCount-3); i++)
			crcBuff[i] = inBuff[i];

	crc = crc16(crcBuff, i, 0xffff);

	sprintf(buff, "CRC: %x, RXCRC: %x\r\n\r\n\r\n", crc, rxCRC);
	HAL_UART_Transmit(&huart1, buff, sizeof(buff), 0xffff);

	if (crc == rxCRC)
		return 1;
	else
		return 0;
}
